   # MongoDB connection string
   MONGODB_URI=mongodb://mongo:27017/sudoku

   # JWT secret for authentication
   JWT_SECRET=supersecretjwtkey

   # Frontend base URL (for CORS and Socket.IO)
   CLIENT_URL=http://localhost

   # CORS allowed origins (comma-separated)
   CORS_ORIGINS=http://localhost

   # Socket.IO URL (if different from API)
   SOCKET_IO_URL=http://localhost:5000

   # Backend port
   PORT=5000

   # Email provider (mailgun, resend, postmark)
   MAIL_PROVIDER=mailgun
   MAILGUN_USER=your_mailgun_user
   MAILGUN_PASS=your_mailgun_pass
   RESEND_API_KEY=your_resend_api_key
   POSTMARK_API_KEY=your_postmark_api_key
   EMAIL_FROM=noreply@sudokami.com